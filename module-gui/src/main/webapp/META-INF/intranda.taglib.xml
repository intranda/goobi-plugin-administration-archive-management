<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
    version="2.0"
>
    <namespace>http://goobi.io/facelets</namespace>
    <tag>
        <tag-name>area</tag-name>
        <source>tags/io/goobi/area.xhtml</source>
    </tag>
    <tag>
        <tag-name>input</tag-name>
        <source>tags/io/goobi/input.xhtml</source>
    </tag>
    <tag>
        <tag-name>textarea</tag-name>
        <source>tags/io/goobi/textarea.xhtml</source>
    </tag>
    <tag>
        <tag-name>dropdown</tag-name>
        <source>tags/io/goobi/dropdown.xhtml</source>
    </tag>
    <tag>
        <tag-name>multiselect</tag-name>
        <source>tags/io/goobi/multiselect.xhtml</source>
    </tag>
    <tag>
        <tag-name>readonly</tag-name>
        <source>tags/io/goobi/readonly.xhtml</source>
    </tag>    
    <tag>
        <tag-name>badge</tag-name>
        <source>tags/io/goobi/badge.xhtml</source>
        <attribute>
            <description>Controls the appearance of the badge, pre-defined are 'badge-filled' and 'badge-empty'.</description>
            <name>styleclassname</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>Displayed name of the badge</description>
            <name>fieldname</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>Name of the area to update after a click</description>
            <name>area</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>Name of the area to update after a click</description>
            <name>rendered</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <description>Name of the area where the badge is in to toggle</description>
            <name>showDetails</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>
</facelet-taglib>